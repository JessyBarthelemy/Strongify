<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ExerciseListFragment"
    android:background="?android:windowBackground">
    <LinearLayout
        android:id="@+id/search_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/little_margin"
        android:paddingRight="@dimen/little_margin"
        android:paddingBottom="@dimen/little_margin">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_exercise"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:queryHint="@string/exercise_search_hint"
            app:iconifiedByDefault="false"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/search_filter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/content_filter"
            android:src="@drawable/ic_filter"/>
    </LinearLayout>
    <com.jessy_barthelemy.strongify.layout.FlowLayout
        android:id="@+id/exercise_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_wrapper"
        android:layout_marginStart="@dimen/little_margin"
        android:layout_marginEnd="@dimen/little_margin"
		android:layout_marginLeft="@dimen/little_margin"
        android:layout_marginRight="@dimen/little_margin">

    </com.jessy_barthelemy.strongify.layout.FlowLayout>

    <ExpandableListView
        android:id="@+id/exercise_list"
        android:layout_above="@+id/add_exercises"
        android:layout_below="@id/exercise_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"/>

    <Button
        android:id="@id/add_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:layout_centerHorizontal="true"
        android:text="@string/workout_add_exercise_action"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/little_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:visibility="gone"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_add"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:pressedTranslationZ="0dp"/>
</RelativeLayout>