<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/exercise_list_padding"
    android:background="@color/colorBackgroundDarkTheme">
    <ImageView
        android:id="@+id/exercise_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_exercise_explanation"
        app:tint="?colorImageTint"
        android:src="@drawable/ic_load"
        android:scaleType="centerInside"/>
    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/exercise_list_padding"
		android:paddingLeft="@dimen/exercise_list_padding"
        android:paddingEnd="@dimen/exercise_list_padding"
		android:paddingRight="@dimen/exercise_list_padding"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/exercise_image"
        android:layout_toRightOf="@id/exercise_image"/>

    <ImageView
        android:id="@+id/exercise_validation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_valid"
        app:tint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:contentDescription="@string/content_validation"
        android:paddingStart="@dimen/exercise_list_padding"
        android:paddingEnd="@dimen/exercise_list_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>