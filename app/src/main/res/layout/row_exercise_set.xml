<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    app:elevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/little_margin">
            <TextView
                android:id="@+id/set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/little_margin"/>

            <Spinner
                android:id="@+id/set_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:entries="@array/exercise_set_type"/>

            <RelativeLayout
                android:id="@+id/set_repetition_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/set_title"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/set_repetition_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_set_repetition"
                    android:labelFor="@id/set_repetition"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_max"
                    android:layout_toLeftOf="@+id/set_max"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

                <Button
                    android:id="@id/set_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="?colorDisabled"
                    android:text="@string/exercise_max"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="@dimen/little_button_padding"
                    android:layout_toStartOf="@+id/set_repetition"
                    android:layout_toLeftOf="@+id/set_repetition"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/set_repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minWidth="30dp"
                    android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:layout_toStartOf="@+id/goal_rest_wrapper"
                    android:layout_toLeftOf="@+id/goal_rest_wrapper"
                    android:layout_centerVertical="true"
                    android:selectAllOnFocus="true"/>
                <LinearLayout
                    android:id="@+id/goal_rest_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_repetition_icon"
                    android:layout_toLeftOf="@+id/set_repetition_icon"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/goal_rest_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent2"
                        android:layout_marginStart="@dimen/little_margin"
                        android:layout_marginEnd="@dimen/little_margin"
                        android:layout_marginLeft="@dimen/little_margin"
                        android:layout_marginRight="@dimen/little_margin"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/exercise_min_title" />
                    <TextView
                        android:id="@+id/goal_rest_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorAccent2"
                        android:layout_marginStart="@dimen/little_margin"
                        android:layout_marginEnd="@dimen/little_margin"
                        android:layout_marginLeft="@dimen/little_margin"
                        android:layout_marginRight="@dimen/little_margin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@string/exercise_sec_title"
                        android:layout_marginEnd="@dimen/little_margin"
                        android:layout_marginRight="@dimen/little_margin"/>
                </LinearLayout>
                <ImageView
                    android:id="@id/set_repetition_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_set"
                    app:tint="@color/colorAccent"
                    android:contentDescription="@string/content_set_count"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/set_weight_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/set_repetition_wrapper"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/set_weight_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_set_weight"
                    android:labelFor="@id/set_weight"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_weight"
                    android:layout_toLeftOf="@+id/set_weight"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

                <EditText
                    android:id="@id/set_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:minWidth="30dp"
                    android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:layout_toStartOf="@+id/set_weight_icon"
                    android:layout_toLeftOf="@+id/set_weight_icon"
                    android:layout_centerVertical="true"
                    android:selectAllOnFocus="true"/>

                <ImageView
                    android:id="@id/set_weight_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/content_exercise_weight"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:tint="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/set_rest_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/set_weight_wrapper"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/little_margin">
                <TextView
                    android:id="@+id/set_rest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_set_rest"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/set_rest_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_min_title"
                    android:layout_toLeftOf="@+id/set_rest_min_title"
                    android:layout_toEndOf="@id/set_rest_title"
                    android:layout_toRightOf="@id/set_rest_title"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:gravity="end"/>
                <TextView
                    android:id="@id/set_rest_min_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_min_title"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_sec"
                    android:layout_toLeftOf="@+id/set_rest_sec"/>
                <TextView
                    android:id="@id/set_rest_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_sec_title"
                    android:layout_toLeftOf="@+id/set_rest_sec_title"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"/>

                <TextView
                    android:id="@id/set_rest_sec_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_sec_title"
                    android:layout_toStartOf="@+id/set_rest_icon"
                    android:layout_toLeftOf="@+id/set_rest_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"/>

                <ImageView
                    android:id="@id/set_rest_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_time"
                    android:contentDescription="@string/content_rest"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/colorAccent2"/>
            </RelativeLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>