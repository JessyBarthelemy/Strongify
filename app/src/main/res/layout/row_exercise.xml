<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="2dp"
    app:elevation="3dp"
    android:background="?android:windowBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/little_margin">
            <TextView
                android:id="@+id/exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/workout_title_size"
                android:textColor="@color/colorAccent"
                android:layout_toStartOf="@+id/draggable"
                android:layout_toLeftOf="@+id/draggable"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/exercise_title"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/workout_set_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/little_margin"
                        android:layout_marginRight="@dimen/little_margin"
                        android:textColor="@color/subtitle"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/exercise_set_repetition_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_set"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorAccent"
                            android:contentDescription="@string/content_set_count"/>

                        <TextView
                            android:id="@+id/exercise_set_repetition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/little_margin"
                            android:layout_marginRight="@dimen/little_margin"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/exercise_weight_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            app:tint="@android:color/black"
                            android:contentDescription="@string/content_exercise_weight"/>

                        <TextView
                            android:id="@+id/exercise_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/little_margin"
                            android:layout_marginRight="@dimen/little_margin"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/exercise_rest_wrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/exercise_rest_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_time"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            app:tint="@color/colorAccent2"
                            android:contentDescription="@string/content_rest"/>

                        <TextView
                            android:id="@+id/exercise_rest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/little_margin"
                            android:layout_marginRight="@dimen/little_margin"
                            android:textSize="12sp" />
                    </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@id/draggable"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_move"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/workout_card_margin"
                android:paddingEnd="@dimen/workout_card_margin"
                android:paddingStart="@dimen/workout_card_margin"
				android:paddingLeft="@dimen/workout_card_margin"
                android:paddingRight="@dimen/workout_card_margin"
                android:contentDescription="@string/content_draggable"/>
        </RelativeLayout>
</androidx.cardview.widget.CardView>