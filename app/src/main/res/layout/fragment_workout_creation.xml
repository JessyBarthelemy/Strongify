<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WorkoutManagementFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:windowBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:background="?android:windowBackground">
        <TextView
            android:id="@+id/workout_creation_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_creation_title_text"
            style="@style/Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/workout_creation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_title_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/workout_creation_title"
                android:inputType="textShortMessage"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/workout_creation_per_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_creation_periodicity"
            style="@style/Title"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_creation_periodicity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_per_title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/workout_creation_reminder_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_creation_reminder"
            style="@style/Title"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_periodicity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <CheckBox
            android:id="@+id/workout_creation_reminder_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_creation_reminder_check"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_reminder_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/workout_creation_reminder_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_reminder_check"
            app:layout_constraintLeft_toLeftOf="@id/workout_creation_periodicity"
            app:layout_constraintRight_toRightOf="@id/workout_creation_periodicity"
            android:layout_marginTop="@dimen/little_margin"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/workout_management_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workout_creation_action"
            style="@style/Button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_creation_reminder_time"
            android:paddingStart="@dimen/little_margin"
            android:paddingLeft="@dimen/little_margin"
            android:paddingEnd="@dimen/little_margin"
            android:paddingRight="@dimen/little_margin"
            android:layout_marginTop="@dimen/little_margin" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>