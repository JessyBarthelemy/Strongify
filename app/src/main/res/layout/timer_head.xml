<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.jessy_barthelemy.strongify.customLayout.Timer
        android:id="@+id/timer"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:circleBackColor="@color/colorIcon"
        app:circleBackground="@color/colorBackground"
        app:circleColor="@color/colorAccent"
        app:circleStroke="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textSize="40sp"/>

    <ImageView
        android:id="@+id/close_timer"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/content_close_timer"/>
</androidx.constraintlayout.widget.ConstraintLayout>