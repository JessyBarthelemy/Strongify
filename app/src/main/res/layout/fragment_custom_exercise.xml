<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CustomExerciseFragment"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/back_action"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/title"
        android:layout_toStartOf="@id/title"
        android:scaleType="fitStart"
        android:src="@drawable/ic_go_back"
        app:tint="@color/colorAccent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Title"
        android:layout_centerHorizontal="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/superset_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:elevation="3dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:padding="@dimen/little_margin"
        android:layout_below="@id/title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/little_margin">
            <RelativeLayout
                android:id="@+id/custom_repetition_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/set_repetition_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_set_turn"
                    android:labelFor="@id/set_repetition"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_repetition"
                    android:layout_toLeftOf="@+id/set_repetition"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

                <EditText
                    android:id="@+id/set_repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minWidth="30dp"
                    android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:layout_toStartOf="@+id/set_repetition_icon"
                    android:layout_toLeftOf="@+id/set_repetition_icon"
                    android:layout_centerVertical="true"
                    android:selectAllOnFocus="true"/>

                <ImageView
                    android:id="@id/set_repetition_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_set"
                    app:tint="@color/colorAccent"
                    android:contentDescription="@string/content_set_count"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom_rest_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_repetition_wrapper">
                <TextView
                    android:id="@+id/set_rest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_set_rest"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/set_rest_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_min_title"
                    android:layout_toLeftOf="@+id/set_rest_min_title"
                    android:layout_toEndOf="@id/set_rest_title"
                    android:layout_toRightOf="@id/set_rest_title"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
					android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"
                    android:gravity="end"/>
                <TextView
                    android:id="@id/set_rest_min_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_min_title"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_sec"
                    android:layout_toLeftOf="@+id/set_rest_sec"/>
                <TextView
                    android:id="@id/set_rest_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent2"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/set_rest_sec_title"
                    android:layout_toLeftOf="@+id/set_rest_sec_title"
                    android:layout_marginStart="@dimen/little_margin"
                    android:layout_marginEnd="@dimen/little_margin"
					android:layout_marginLeft="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"/>

                <TextView
                    android:id="@id/set_rest_sec_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/exercise_sec_title"
                    android:layout_toStartOf="@+id/set_rest_icon"
                    android:layout_toLeftOf="@+id/set_rest_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/little_margin"
                    android:layout_marginRight="@dimen/little_margin"/>

                <ImageView
                    android:id="@id/set_rest_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_time"
                    android:contentDescription="@string/content_rest"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/colorAccent2"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/save_action"
        android:layout_below="@id/superset_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/little_margin"
        android:text="@string/save"
        android:paddingLeft="@dimen/little_margin"
        android:paddingRight="@dimen/little_margin"
        android:paddingStart="@dimen/little_margin"
        android:paddingEnd="@dimen/little_margin"/>

</RelativeLayout>