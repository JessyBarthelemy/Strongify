<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorAccent2">@color/colorAccent2</item>
        <item name="colorBottomNavigation">@color/bottomNavigation</item>
        <item name="colorBottomNavigationText">@color/bottomNavigationText</item>
        <item name="colorSubtitle">@color/subtitle</item>
        <item name="colorSeparator">@color/separator</item>
        <item name="colorDisabled">@color/disabled</item>
        <item name="colorListItemSelected">@color/listItemSelected</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorIconImage">@color/colorIcon</item>
        <item name="colorImageTint">@null</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="android:windowBackground">@color/colorBackgroundDarkTheme</item>
        <item name="colorAccent2">@color/colorAccent2</item>
        <item name="colorBottomNavigation">@color/bottomNavigationDarkTheme</item>
        <item name="colorBottomNavigationText">@color/bottomNavigationTextDarkTheme</item>

        <item name="colorSubtitle">@color/subtitle</item>
        <item name="colorSeparator">@color/colorSeparatorDarkTheme</item>
        <item name="colorDisabled">@color/colorDisabledDarkTheme</item>
        <item name="colorListItemSelected">@color/colorPrimaryDarkTheme</item>
        <item name="colorText">@color/colorTextDarkTheme</item>
        <item name="colorIconImage">@color/colorIconDarkTheme</item>

        <item name="colorImageTint">@color/colorImageTintDarkTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Title">
        <item name="android:textColor">?colorAccent </item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button">
        <item name="android:background">?colorAccent </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="ButtonLight">
        <item name="android:background">?colorAccent </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">88dp</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <!-- Profile -->
    <style name="ProfileItemValue">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileItemDesc">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
